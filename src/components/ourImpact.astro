<script>
  import Swiper from "swiper";
  import { Pagination, Autoplay } from "swiper/modules";
  const carousel = new Swiper(".swiper-wrapper-master", {
    modules: [Pagination],
    slidesPerView: 1,
    spaceBetween: 20,
    breakpoints: {
      786: {
        slidesPerView: 1,
        spaceBetween: 10,
      },
      1020: {
        slidesPerView: 2,
        spaceBetween: 20,
      },
      1280: {
        slidesPerView: 2.5,
        spaceBetween: 20,
      },
    },
    pagination: {
      el: ".swiper-pagination",
      type: "bullets",
      bulletActiveClass: "swiper-pagination-bullet-active",
    },
    autoplay: {
      delay: 1000,
    },
    speed: 1000,
  });
</script>

<style>
  .cards {
    position: relative;
    height: 450px;
  }
  .card-bg {
