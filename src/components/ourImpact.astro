    inset: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .cards-content-wrp {
    position: relative;
    color: white;
    height: auto;
    overflow: hidden;
  }
  .cards-content {
    background: linear-gradient(to top, #000000ac, #ffffff2a);
    padding-bottom: 30px !important;
